rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /thumbnails/{imageId} {
      // Public read access for article images
      allow read: if true;
      
      // Authenticated users can upload images
      allow write: if request.auth != null;
    }

    match /pfp/{userId}/{imageId} {
      // Public read access for profile photos
      allow read: if true;
      
      // Only the owner can upload/delete their profile photo
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}